            --delay: 500ms;
        }
    }
    .hex-field__hexagon--type-k {
        grid-area: k;
        svg {
            --size: 7px;
            --speed: 4.5s;
            --delay: 625ms;
        }
    }
    .hex-field__hexagon--type-l {
        grid-area: l;
        svg {
            --size: 4px;
            --speed: 5s;
            --delay: 450ms;
        }
    }
    .hex-field__hexagon--type-m {
        grid-area: m;
        svg {
            --size: 9px;
            --speed: 6s;
            --delay: 700ms;
        }
    }
    .hex-field__hexagon--type-n {
        grid-area: n;
        svg {
            --size: 10px;
            --speed: 10s;
            --delay: 200ms;
        }
    }
    .hex-field__hexagon--type-o {
        grid-area: o;
        svg {
            --size: 15px;
