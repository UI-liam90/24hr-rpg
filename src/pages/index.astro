---
import Layout from '../layouts/Layout.astro';
import HomeHero from '../components/Home_hero.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { Picture } from "astro-imagetools/components";
---
<Layout 
title="24 Hour RPG Challenge 2022"
description="24 Hour RPG Challenge 2022, this year in support for Shelter" 
openGraphTitle="Welcome to 24 Hour RPG Challenge 2022"
openGraphImage="/images/facebook.png"
openGraphImageAlt="24 Hour RPG Challenge"
>

<HomeHero eventDate="2022-09-24" charityLogo="/src/images/Shelter-Logo-small.png" charityName="Shelter Charity Logo" link="https://www.justgiving.com/fundraising/24-Hour-RPG-Challenge"/>

</Layout>

<style>
	main {
		padding: 20px 32px;
	}

	h1 {
		font-weight: 900;
		font-size: var(--font-size-elephant);
	}
	h2 {
		font-weight: 900;
		font-size: var(--font-size-bear);
	}
	.intro-article {
		display: flex;
		flex-direction: column;
	}

	@media screen and (min-width: 768px) {
		main {
			padding: 20px 32px;
			display: grid;
			grid-template-columns: 1.5fr 1fr;
			gap: 50px;
		}
		.intro-article {
		}
		.intro-article-text {
			columns: 2;
		}
	}

</style>
